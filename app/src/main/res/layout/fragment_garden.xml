<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/nursery_background">

        <TextView
            android:id="@+id/graden_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="182dp"
            android:text="Username"
            android:textColor="@color/white"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/garden_back"
            app:layout_constraintTop_toTopOf="@+id/garden_back" />

        <ImageView
            android:id="@+id/garden_back"
            android:layout_width="34dp"
            android:layout_height="36dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="24dp"
            app:layout_constraintBottom_toTopOf="@+id/garden_recycler_view"
            app:layout_constraintEnd_toStartOf="@+id/graden_username"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_arrow_back_white_24dp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/garden_recycler_view"
            android:layout_width="343dp"
            android:layout_height="0dp"
            android:layout_marginBottom="58dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:background="@color/nursery_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/graden_username"
            app:layout_constraintStart_toEndOf="@+id/graden_username"
            app:layout_constraintTop_toBottomOf="@+id/garden_back" />

        <ProgressBar
            android:id="@+id/garden_progress"
            style="?android:attr/progressBarStyle"
            android:layout_width="107dp"
            android:layout_height="107dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>
</layout>
